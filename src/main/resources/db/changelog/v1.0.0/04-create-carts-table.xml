<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd">

    <changeSet id="04-create-carts-table" author="developer">
        <comment>Создание таблицы корзин пользователей</comment>

        <createTable tableName="carts">
            <!-- Базовые поля -->
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITHOUT TIME ZONE">
                <constraints nullable="false"/>
            </column>

            <!-- Поля корзины -->
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="total_amount" type="DECIMAL(10,2)">
                <constraints nullable="true"/>
            </column>
            <column name="total_items" type="INTEGER">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <!-- Создание внешнего ключа -->
        <addForeignKeyConstraint
                baseTableName="carts"
                baseColumnNames="user_id"
                constraintName="fk_carts_user"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>

        <!-- Добавляем комментарии -->
        <sql>
            COMMENT ON TABLE carts IS 'Корзины пользователей';
            COMMENT ON COLUMN carts.user_id IS 'ID пользователя-владельца корзины';
            COMMENT ON COLUMN carts.total_amount IS 'Общая стоимость товаров в корзине';
            COMMENT ON COLUMN carts.total_items IS 'Общее количество товаров в корзине';
        </sql>

        <!-- Проверочные ограничения -->
        <sql>
            ALTER TABLE carts ADD CONSTRAINT chk_carts_total_amount_positive
                CHECK (total_amount IS NULL OR total_amount >= 0);

            ALTER TABLE carts ADD CONSTRAINT chk_carts_total_items_positive
                CHECK (total_items IS NULL OR total_items >= 0);
        </sql>

        <!-- Установим значения по умолчанию -->
        <sql>
            ALTER TABLE carts ALTER COLUMN total_amount SET DEFAULT 0;
            ALTER TABLE carts ALTER COLUMN total_items SET DEFAULT 0;
        </sql>
    </changeSet>

</databaseChangeLog>