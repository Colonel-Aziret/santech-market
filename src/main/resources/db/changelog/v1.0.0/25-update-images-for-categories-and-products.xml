            <column name="image_url" value="https://placehold.co/400x400/png?text=Sewage"/>
            <where>name = 'Канализационные трубы'</where>
        </update>

        <update tableName="categories">
            <column name="image_url" value="https://placehold.co/400x400/png?text=Floor+Heating"/>
            <where>name = 'Трубы для теплого пола'</where>
        </update>

        <update tableName="categories">
            <column name="image_url" value="https://placehold.co/400x400/png?text=Corrugated"/>
            <where>name = 'Гофрированные трубы'</where>
        </update>

        <update tableName="categories">
            <column name="image_url" value="https://placehold.co/400x400/png?text=Insulation"/>
            <where>name = 'Теплоизоляционные трубки'</where>
        </update>

        <!-- Обновление изображений для всех товаров (используем одно изображение для простоты) -->
        <update tableName="products">
            <column name="image_url" value="https://placehold.co/600x600/png?text=Product"/>
            <where>image_url IS NULL</where>
        </update>

    </changeSet>

</databaseChangeLog>
