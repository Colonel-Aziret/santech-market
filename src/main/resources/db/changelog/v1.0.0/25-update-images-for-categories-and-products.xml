        <update tableName="categories">
            <column name="image_url" value="https://placehold.co/400x400/png?text=Instrumenty"/>
            <where>name = 'Инструменты'</where>
        </update>

        <!-- Обновление изображений для подкатегорий -->
        <update tableName="categories">
            <column name="image_url" value="https://placehold.co/400x400/png?text=PPR"/>
            <where>name = 'PPR трубы'</where>
        </update>

        <update tableName="categories">
            <column name="image_url" value="https://placehold.co/400x400/png?text=Cold+Water"/>
            <where>name = 'Трубы для холодной воды'</where>
        </update>

        <update tableName="categories">
            <column name="image_url" value="https://placehold.co/400x400/png?text=Hot+Water"/>
            <where>name = 'Трубы для горячей воды'</where>
