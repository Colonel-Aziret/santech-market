<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="30-create-verification-codes-table" author="azire">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="verification_codes"/>
            </not>
        </preConditions>

        <createTable tableName="verification_codes">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(6)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="target_email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="new_value" type="VARCHAR(100)"/>
            <column name="expiry_date" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="is_used" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="attempt_count" type="INTEGER" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Foreign Key -->
        <addForeignKeyConstraint
                baseTableName="verification_codes"
                baseColumnNames="user_id"
                constraintName="fk_verification_codes_user"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <!-- Indexes -->
        <createIndex indexName="idx_verification_codes_user_id" tableName="verification_codes">
            <column name="user_id"/>
        </createIndex>

        <createIndex indexName="idx_verification_codes_code" tableName="verification_codes">
            <column name="code"/>
        </createIndex>

        <createIndex indexName="idx_verification_codes_type" tableName="verification_codes">
            <column name="type"/>
        </createIndex>

        <createIndex indexName="idx_verification_codes_user_type" tableName="verification_codes">
            <column name="user_id"/>
            <column name="type"/>
        </createIndex>

        <rollback>
            <dropTable tableName="verification_codes"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
